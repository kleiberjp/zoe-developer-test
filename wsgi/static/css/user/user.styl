.match-container
  position relative
  width 550px
  margin 85px auto
  padding 20px 40px 40px
  text-align center
  background #fff
  border 1px solid #ccc

  &::before, &::after
    content ""
    position absolute
    width 100%
    height 100%
    top 3.5px
    left 0
    background #fff
    z-index -1
    transform rotateZ(4deg)
    border 1px solid #ccc


  &::after
    top 5px
    z-index -2
    transform rotateZ(-2deg)


#output
  position absolute
  width 100%
  top -75px
  left 0
  color #fff
  text-align center

  &.alert-success
    background rgb(25, 204, 25)

  &.alert-danger
    background rgb(228, 105, 105)


.avatar
  width 145px
  height 95px
  margin 10px auto 30px
  //border-radius 100%
  //border 2px solid #aaa
  background-size cover
  background-image url("http://www.zoefin.com/uploads/8/0/4/6/80465164/5313477.png")
  background-repeat no-repeat
  background-position center center

.form-box
  input
    width 100%
    padding 10px
    text-align center
    height 40px
    border 1px solid #ccc
    background #fafafa
    transition 0.2s ease-in-out


  &:focus
    outline 0
    background #eee


  input[type="text"]
    border-radius 5px 5px 0 0
    text-transform lowercase

  input[type="password"]
    border-radius 0 0 5px 5px
    border-top 0


  button.login
    margin-top 15px
    padding 10px 20px


.animated
  animation-fill-mode both


@keyframes fadeInUp {
  0% {
    opacity 0
    transform translateY(20px)
  }

  100% {
    opacity 1
    transform translateY(0)
  }
}

.fadeInUp
  animation-name fadeInUp

